#=== Налаштування Koha ===

KOHA_IMAGE_TAG=25.05

#Назва вашого локального образу

KOHA_IMAGE_NAME=koha-local

#Назва екземпляра Koha (наприклад: library)

KOHA_INSTANCE=library

#Доменне ім'я (якщо використовується)

KOHA_DOMAIN=.myDNSname.org

#Часовий пояс (для контейнера Koha та налаштувань)

KOHA_TIMEZONE=Europe/Kyiv
KOHA_LANGS=uk-UA


#=== Налаштування Бази Даних ===

#Ім'я бази даних для Koha

DB_NAME=koha_library

#Користувач бази даних для Koha

DB_USER=koha_db

#Пароль користувача Koha (ЗМІНІТЬ НА НАДІЙНИЙ!)

DB_PASS=dbpass1234

#Пароль root для MariaDB (ЗМІНІТЬ НА ДУЖЕ НАДІЙНИЙ!)

DB_ROOT_PASS=rootpass1234

#=== Налаштування RabbitMQ ===

#(Логін та пароль для RabbitMQ)

RABBITMQ_USER=koha_mq
RABBITMQ_PASS=rabbitmqpass1234

#=== Налаштування Elasticsearch ===
USE_ELASTICSEARCH=true
ELASTICSEARCH_HOST=es:9200

KOHA_INTRANET_PORT=8081
KOHA_OPAC_PORT=8080

KOHA_INTRANET_PREFIX=""
KOHA_INTRANET_SUFFIX="-intra"
KOHA_OPAC_PREFIX=""
KOHA_OPAC_SUFFIX=""

ZEBRA_MARC_FORMAT=marc21
ZEBRA_LANGUAGE=uk
BIBLIOS_INDEXING_MODE=dom
AUTHORITIES_INDEXING_MODE=dom
USE_MEMCACHED=yes
MEMCACHED_SERVERS=memcached:11211

DB_HOST=db
DB_PORT=3306

# Backup dir for backup.sh
BACKUP_PATH=$HOME/koha_backups

# Restore dir
RESTORE_SOURCE_DIR=$HOME/koha_backups/2025-12-06_18-49-26

# dirs for patch-koha-templates.sh
KOHA_OFFICIAL_TEMPLATES_DIR=$HOME/koha-official/debian/templates
KOHA_TARGET_TEMPLATES_DIR=$HOME/koha-doker/files/docker/templates

CLOUDFLARE_TOKEN=

#Only for Ngrok
#DOMAIN_NAME=untaking-amusively-staci.ngrok-free.dev


# === ШЛЯХИ ДО ДАНИХ (VOLUME PATHS) ===
VOL_DB_PATH=$HOME/KDV_HDD/koha_project/mysql_data
VOL_ES_PATH=$HOME/KDV_HDD/koha_project/elastic_data
VOL_KOHA_CONF=$HOME/KDV_HDD/koha_project/koha_config
VOL_KOHA_DATA=$HOME/KDV_HDD/koha_project/koha_data
VOL_KOHA_LOGS=$HOME/KDV_HDD/koha_project/koha_logs